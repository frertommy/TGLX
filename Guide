<script>
function setMode(mode) {
  // Update buttons
  document.querySelectorAll('.mode-btn').forEach(btn => {
    btn.classList.toggle('active', btn.textContent.toLowerCase() === mode);
  });
  // Show/hide content
  document.querySelectorAll('.mode-content').forEach(el => {
    el.classList.toggle('visible', el.dataset.mode === mode);
  });
}

function copyBlock(btn) {
  const codeBlock = btn.closest('.code-block');
  const exampleMsg = btn.closest('.example-msg');
  const comboMsg = btn.closest('.combo-prompt-msg');
  
  let text = '';
  
  if (codeBlock) {
    text = codeBlock.querySelector('.code-body').innerText.trim();
  } else if (comboMsg) {
    text = Array.from(comboMsg.childNodes)
      .filter(n => !n.classList || !n.classList.contains('copy-btn'))
      .map(n => n.textContent).join('').trim();
  } else if (exampleMsg) {
    const full = exampleMsg.innerText.replace('Copy', '').trim();
    const youLine = full.match(/^You:\s*(.+?)(?:\n|$)/);
    text = youLine ? youLine[1].trim() : full;
  }
  
  if (!text) return;
  
  navigator.clipboard.writeText(text).then(() => {
    btn.textContent = 'Copied!';
    btn.dataset.copied = 'true';
    setTimeout(() => {
      btn.textContent = 'Copy';
      btn.dataset.copied = '';
    }, 2000);
  });
}
</script>

</body>
</html>
